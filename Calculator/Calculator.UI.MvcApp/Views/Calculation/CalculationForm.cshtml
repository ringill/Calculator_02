@model Calculator.Presentation.ViewModels.CalculationViewModel

<h4>Операция</h4>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>
        @Html.DropDownList("SelectedOperationType", new SelectList(Model.OperationTypes))
    </div>
    
    <fieldset>
        <legend></legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Argument1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Argument1)
            @Html.ValidationMessageFor(model => model.Argument1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Argument2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Argument2)
            @Html.ValidationMessageFor(model => model.Argument2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OperationResult)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.OperationResult)
        </div>

        <p>
            <input type="submit" value="Вычислить" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
